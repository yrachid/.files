
runtime bundle/vim-pathogen/autoload/pathogen.vim

call pathogen#infect()

" Set ctrlp on vim's runpath
set runtimepath^=~/.vim/bundle/ctrlp.vim

" Sets a color scheme that does not burn the eyes so much.
syntax enable
colorscheme farout

runtime vimrc.d/ale.vim
runtime vimrc.d/coc.vim
runtime vimrc.d/ctrlp.vim
runtime vimrc.d/editor.vim
runtime vimrc.d/emmet.vim
runtime vimrc.d/nerdtree.vim
runtime vimrc.d/rainbow.vim
runtime vimrc.d/vim-test.vim
runtime vimrc.d/keymap.vim
